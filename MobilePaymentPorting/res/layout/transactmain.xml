	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="120px">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/transactionDetails"  android:textColor="#000000"/>
		<ListView android:id="@+id/ListView01" android:layout_height="fill_parent"
			android:layout_width="fill_parent"></ListView>
	</LinearLayout>






	
	</ScrollView>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="@string/total6" android:layout_width="wrap_content"
			android:layout_height="wrap_content"  android:textColor="#000000"/>
		<TextView android:id="@+id/total7" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000" />
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:text="@string/total3" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000" />

			android:layout_height="wrap_content" android:textColor="#000000" />
	</LinearLayout>


	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="@string/total4" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000" />
		<TextView android:id="@+id/total2" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000" />


	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button
        android:id="@+id/button93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@drawable/android_button"
        android:gravity= "center" />


</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		
		<Button android:layout_width="match_parent" android:id="@+id/finalBuy1" android:layout_height="wrap_content" android:text="@string/viewBarcode"
